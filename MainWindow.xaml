<Window x:Class="ZeroYz.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZeroYz"
        mc:Ignorable="d"

        WindowStyle="None"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        Title="SQUAD" Height="450" Width="800">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="105*"/>
            <RowDefinition Height="314*"/>
        </Grid.RowDefinitions>

        <!--Начало разметки приложения-->
        <StackPanel 
             VerticalAlignment="Top"
             Orientation="Horizontal">
            <Button
                 Name="Exit"
                 Click="Exit_Click"
                 Style="{StaticResource windowsPanel}">
                <Button.Template>
                    <ControlTemplate>
                        <Border
                     CornerRadius="10"
                     Background="Red"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button
                 Margin="0,5,0,5"
                 Name="Resize"
                 Click="Resize_Click"
                 Style="{StaticResource windowsPanel}">
                <Button.Template>
                    <ControlTemplate>
                        <Border
                     CornerRadius="10"
                     Background="Green"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button 
                 Name="Min"
                 Click="Min_Click"
                 Style="{StaticResource windowsPanel}"> 
                <Button.Template>
                    <ControlTemplate>
                        <Border
                     CornerRadius="10"
                     Background="Yellow"/>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Image Source="Resurses/File.jpg"/>

            <TextBlock 
                FontSize="16pt"
                FontWeight="Bold"
                Foreground="Black"
                Margin="10"
                VerticalAlignment="Center"
                Text="{Binding ElementName=FrmMain, Path=Content.Title}"/>
        </StackPanel>
        <!--Конец разметки приложения-->        
        
        <!--Начало тела приложения-->
        <Frame 
            NavigationUIVisibility="Hidden"
            Name="FrmMain"
            Grid.Row="1"
            Grid.Column="0"/>
        <!--Начало тела приложения-->

    </Grid>
</Window>
